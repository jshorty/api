// Reference: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -----------------------------------------------------------------------------
// Components

model Component {
  // The ID of the component (generated by the database)
  id String @id @default(cuid())

  // The name of the component (sentence case)
  name String @unique

  // A description of the component
  description String? // Should this be required?
}
